{
  "name": "shadow-api",
  "version": "0.1.0",
  "private": true,
  "description": "Real-time Shadow API Actor scaffold for non-API websites.",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "start": "node dist/main.js",
    "dev": "tsx src/main.ts",
    "typecheck": "tsc --noEmit -p tsconfig.json",
    "dev:runner": "tsx scripts/dev-runner.ts",
    "debug:queue": "tsx scripts/debug-queue.ts",
    "smoke:local": "tsx scripts/smoke-local.ts",
    "verify:fixtures": "tsx scripts/verify-selector-fixtures.ts",
    "verify:api-contract": "tsx scripts/verify-api-contract.ts",
    "verify:security": "tsx scripts/verify-security.ts",
    "generate:openapi": "tsx scripts/generate-openapi.ts",
    "generate:postman": "tsx scripts/generate-postman.ts",
    "generate:api-artifacts": "npm run generate:openapi && npm run generate:postman",
    "report:daily": "tsx scripts/generate-daily-reliability-report.ts",
    "benchmark:hot-path": "tsx scripts/benchmark-hot-path.ts",
    "chaos:drill": "tsx scripts/chaos-drill.ts"
  },
  "keywords": [
    "apify",
    "actor",
    "shadow-api",
    "web-scraping",
    "rest-api"
  ],
  "license": "MIT",
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "ajv": "^8.17.1",
    "apify": "^3.5.1",
    "cheerio": "^1.0.0",
    "dotenv": "^16.4.5",
    "playwright-core": "^1.50.1",
    "redis": "^4.7.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  }
}
