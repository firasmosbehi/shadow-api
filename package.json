{
  "name": "shadow-api",
  "version": "0.1.0",
  "private": true,
  "description": "Real-time Shadow API Actor scaffold for non-API websites.",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "start": "node dist/main.js",
    "dev": "tsx src/main.ts",
    "typecheck": "tsc --noEmit -p tsconfig.json",
    "dev:runner": "tsx scripts/dev-runner.ts",
    "debug:queue": "tsx scripts/debug-queue.ts",
    "smoke:local": "tsx scripts/smoke-local.ts"
  },
  "keywords": [
    "apify",
    "actor",
    "shadow-api",
    "web-scraping",
    "rest-api"
  ],
  "license": "MIT",
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "apify": "^3.5.1",
    "dotenv": "^16.4.5",
    "playwright-core": "^1.50.1"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  }
}
